{{!< default}}

<div class="content-area">
    <main class="site-main">
        <div class="post-feed container medium">
            {{#get "posts" limit="all" filter="tag:hash-twitter" order="published_at asc"}}
                {{#foreach posts}}
                    {{> "loop"}}
                {{/foreach}}
            {{/get}}
        </div>
        {{pagination}}
    </main>
</div>