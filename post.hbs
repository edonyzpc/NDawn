{{!< default}}

<div class="content-area">
    <main class="site-main">
        {{#post}}
            {{> content width="narrow"}}
        {{/post}}
        {{#is "post"}}
            {{#if @custom.show_related_posts}}
                {{> related}}
            {{/if}}
        {{/is}}
        {{$post}}
            {{< "comments"}}
        {{/post}}
    </main>
</div>